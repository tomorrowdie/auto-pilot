# Copy this file to .env and fill in your actual values

# Application Settings
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production-make-it-long-and-random
ALLOWED_HOSTS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/shopify_seo

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-make-it-different-from-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Shopify Configuration (Get these from your Shopify Partner Dashboard)
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_SCOPES=read_products,read_orders,read_customers,read_content,read_themes
SHOPIFY_APP_URL=http://localhost:8000

# OpenAI Configuration (Optional - for AI-powered features)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Google APIs (Optional - for additional SEO data)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_API_KEY=your_google_api_key

# Email Configuration (Optional - for reports)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=your_email@gmail.com

# Monitoring and Logging
LOG_LEVEL=INFO

# Rate Limiting
API_RATE_LIMIT=100
OPENAI_RATE_LIMIT=50

# Development Settings
RELOAD=true
WORKERS=1